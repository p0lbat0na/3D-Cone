<script id="Handlebars-Template" type="text/x-handlebars-template">
</script>
<h2>Новая заявка</h2>
<form class="container" id="reqForm">
    <ul>
        <li>


            <div class="fieldset">
                <input id="dep_code" type="text" class="textbox" required>
                <label class="text-field__label" for="dep_code">Код департамента или цеха</label>
            </div>
        </li>
        <li>
            <div class="date_input">
                <p> Выполнить до:</p>
                <input type="date" id="deadline" class="datepicker">
            </div>

        </li>

        <li>
            <br>
            <label>
                <input type="checkbox" id="opinion">
                <span>Требуется выдача заключения</span>
            </label>
        </li>
    </ul>
    
</form>

<form class="card-panel hoverable " id="AaddTestForm">
    <div class="container testing-header ">
        <div class="two-btn">
            <button class="btn-floating btn-small red btn-back waves-effect waves-light" id="back" disabled>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="30" viewBox="1 0 24 22" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M15 18l-6-6 6-6" /></svg>
            </button>
            <button class="btn-floating btn-small red btn-del waves-effect waves-light" id="del" disabled>
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="26" viewBox="-1 0 24 20" fill="none"  stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="3 6 5 6 21 6"></polyline>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                <line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line>
                </svg>
            </button>
        </div>
        <div class="testing-head"><p> <h5 class="center-align">Испытание <strong id="addBtnCount" ></strong></h5> </p></div>

        <button class="btn-floating btn-small red btn-add waves-effect waves-light" id="addTestForm">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="30" viewBox="0 0 24 22" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line></svg>
        </button>
        

    </div>
    <div class="container ">
        <div class="fieldset">
            <input id="control_code" type="text" class="textbox" required readonly>
            <label class="text-field__label" for="control_code"  >Код испытания объекта </label>
        </div>
        <br />
        <div class="fieldset">
            <input id="reg_num" type="text" class="textbox" required readonly>
            <label class="text-field__label" for="reg_num">Регистрационный номер</label>
        </div>
        <br />
        <div class="fieldset">
            <input id="line_num" type="text" class="textbox"required readonly>
            <label class="text-field__label" for="line">Номер линии</label>
        </div>
        <br />
        <div class="fieldset textarea">
            <textarea id="comment" type="text" class="materialize-textarea textbox"required readonly></textarea>
            <label class="text-field__label" for="comment">Комментарий</label>
        </div>
        <br />
        <div class="fieldset textarea">
            <textarea id="files" type="text" class="materialize-textarea textbox"required readonly ></textarea>
            <label class="text-field__label" for="files">Ссылки</label>
        </div>

    </div>

</form>



<script src="/javascripts/insert.js"></script>


{{> tomain}}
